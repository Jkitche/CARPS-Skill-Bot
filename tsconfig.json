{
	"compilerOptions": {
		"outDir": "./dist/",
		"sourceMap": true,
		"module": "commonjs",
		"target": "es6",
		"resolveJsonModule": true,
		"noImplicityAny": true,
		"moduleResolution": "node",
		"strict": true,
		"declaration": true,
		"inlineSources": true,
	},
	"exclude": [
		"node_modules",
		"**/*test.js"
	],
	"include": ["src/**/*"],
}
